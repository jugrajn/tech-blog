    <section class='container'>
        {{#each posts as |post|}}
        <div class='row'>
            <div class='post-flex-item card text-white bg-secondary mb-3 col-md-s2' style='margin-top: 2em'>
                <a href='/{{post.id}}'><p style='font-weight: bolder; font-size: 1.5em;' class='card-header' id='{{post.id}}'>{{post.title}}</p></a>
                <p class="card-body">{{post.content}}</p>
                <p style='font-style: italic;'>Posted by<span style='font-weight: bold'>{{user.username}}</span></p>
            </div>
        </div>
        {{/each}}
        <div class='row'>
            <div class='col-md-s2'>
                <button type="button" class="btn btn-primary">Add Post</button>
            </div>
        </div>

    </section>